<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/routineNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="루틴 명"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/login_button"
        android:text="저장"
        android:textSize="13sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/routineNameEditText"
        app:layout_constraintStart_toStartOf="@id/routineNameEditText"
        app:layout_constraintEnd_toEndOf="@id/routineNameEditText"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>